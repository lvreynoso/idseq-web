{
  "Family": "{{ .Values.project }}-{{ .Values.env }}-{{ .Values.name }}",
  "ContainerDefinitions": [
    {
      "name": "idseq-{{ .Values.name }}",
      "image": "{{ .Values.account_id }}.dkr.ecr.{{ .Values.region }}.amazonaws.com/idseq-web:{{ .Values.tag }}",
      "cpu": 1024,
      "memoryReservation": 3072,
      "essential": true,
      "command": [
        "rake",
        "activity_worker"
      ],
      "environment": [
        {
          "name": "RAILS_ENV",
          "value": "{{ .Values.env }}"
        },
        {
          "name": "ENVIRONMENT",
          "value": "{{ .Values.env }}"
        },
        {
          "name": "RAILS_LOG_TO_STDOUT",
          "value": "yes"
        },
        {
          "name": "AWS_REGION",
          "value": "{{ .Values.region }}"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "{{ .Values.region }}"
        },
        {
          "name": "SAMPLES_BUCKET_NAME",
          "value": "idseq-samples-{{.Values.env }}"
        },
        {
          "name": "IDSEQ_HONEYCOMB_DATA_SET",
          "value": "idseq-web-{{ .Values.env }}"
        },
        {
          "name": "IDSEQ_HONEYCOMB_DB_DATA_SET",
          "value": "idseq-database-{{ .Values.env }}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "ecs-logs-{{ .Values.env }}",
          "awslogs-region": "{{ .Values.region }}",
          "awslogs-stream-prefix": "idseq-{{ .Values.name }}"
        }
      }
    }
  ],
  "TaskRoleArn": "idseq-{{ .Values.env }}-activity-monitor",
  "NetworkMode": "awsvpc"
}